{
  "name": "meteor-globals",
  "version": "1.1.1",
  "description": "Allows getting meteor globals in npm packages",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src -d dist",
    "prepublish": "npm run build",
    "pretest": "npm run lint -- --quiet",
    "test": "ava",
    "test-watch": "ava -w",
    "coverage": "nyc npm test",
    "coveralls": "npm run coverage && nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint --ignore-path .gitignore ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxnowack/meteor-globals.git"
  },
  "keywords": [
    "meteor"
  ],
  "files": [
    "dist"
  ],
  "ava": {
    "files": [
      "tests/index.js"
    ],
    "babel": {
      "presets": [
        "es2015",
        "stage-0"
      ]
    },
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-async-to-generator"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb-base"
    ],
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "tests/**"
          ],
          "optionalDependencies": false
        }
      ]
    }
  },
  "author": "Max Nowack <max@unsou.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maxnowack/meteor-globals/issues"
  },
  "homepage": "https://github.com/maxnowack/meteor-globals#readme",
  "devDependencies": {
    "ava": "0.19.1",
    "babel-cli": "6.24.1",
    "babel-core": "6.24.1",
    "babel-eslint": "7.2.1",
    "babel-plugin-transform-async-to-generator": "6.24.1",
    "babel-polyfill": "6.23.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babel-register": "6.24.1",
    "coveralls": "2.13.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb-base": "11.1.3",
    "eslint-plugin-import": "2.2.0",
    "nyc": "10.2.0"
  },
  "dependencies": {
    "semver": "5.3.0"
  }
}
