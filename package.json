{
  "name": "meteor-globals",
  "version": "1.0.1",
  "description": "Allows getting meteor globals in npm packages",
  "main": "dist/index.js",
  "scripts": {
    "build": "./node_modules/.bin/babel src -d dist",
    "prepublish": "npm run build",
    "pretest": "npm run lint -- --quiet",
    "test": "./node_modules/.bin/ava",
    "coverage": "./node_modules/.bin/nyc npm test",
    "coveralls": "npm run coverage && ./node_modules/.bin/nyc report --reporter=text-lcov | ./node_modules/.bin/coveralls",
    "lint": "./node_modules/.bin/eslint --ignore-path .gitignore ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxnowack/meteor-globals.git"
  },
  "keywords": [
    "meteor"
  ],
  "files": [
    "dist"
  ],
  "ava": {
    "files": [
      "tests/index.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-async-to-generator"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb-base"
    ],
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "tests/**"
          ],
          "optionalDependencies": false
        }
      ]
    }
  },
  "author": "Max Nowack <max@unsou.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maxnowack/meteor-globals/issues"
  },
  "homepage": "https://github.com/maxnowack/meteor-globals#readme",
  "devDependencies": {
    "ava": "0.17.0",
    "babel-cli": "6.18.0",
    "babel-core": "6.21.0",
    "babel-eslint": "7.1.1",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-preset-es2015": "6.18.0",
    "coveralls": "^2.11.15",
    "eslint": "3.13.0",
    "eslint-config-airbnb-base": "10.0.1",
    "eslint-plugin-import": "2.2.0",
    "nyc": "^10.0.0"
  }
}
